<section>
    <h1 class="visuallyhidden">Home Page</h1>
    <div id="carouselExampleIndicators" class="carousel slide hero" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
        <img class="d-block w-100" src="/images/heros/0.png" alt="First slide">
        </div>
        <div class="carousel-item">
        <img class="d-block w-100" src="/images/heros/1.png" alt="Second slide">
        </div>
        <div class="carousel-item">
        <img class="d-block w-100" src="/images/heros/2.png" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
    </div>
   
    <div class="slider featured">
        <h2>Featured Movies</h2>
        <ul class="lightSlider">
            {{#each fmovies}}
                <div class="container"> 
                    <li><a href="/items/{{this.id}}"><img src="/images/posters/{{this.s_image}}.jfif" alt=""></a></li>
                </div>
            {{/each}}
        </ul>
    </div>

    <div class="slider featured">
        <h2>Featured TV Shows</h2>
        <ul class="lightSlider">
            {{#each fshows}}
            <div class="container"> 
                <li><a href="/items/{{this.id}}"><img src="/images/posters/{{this.s_image}}.jfif" alt=""></a></li>
            </div>
        {{/each}}
        </ul>
    </div>

    <div class="content">
        <img class="promote" src="/images/promote1.jfif" alt="">
        <div class="slider all-items">
            <div class="section-header">
                <h2>Browse All Titles</h2>
                <a href="/allListing">View All</a>
            </div>
            <ul class="lightSlider">
                {{#each items}}
                <div class="container"> 
                    <li><a href="/items/{{this.id}}"><img src="/images/posters/{{this.s_image}}.jfif" alt=""></a></li>
                </div>

            {{/each}}
            </ul>
        </div>
        <img class="promote" src="/images/promote2.jfif" alt="">
        <div class="slider categories">
            <h2>More To Explore</h2>
            <ul class="lightSlider">
                {{#each cats}}
                <div class="container"> 
                    <li><img src="/images/categories/{{this}}.jpg" alt=""></a></li>
                </div>

            {{/each}}
            </ul>
        </div>
        <img class="promote" src="/images/promote3.jfif" alt="">


    </div>
</section>

